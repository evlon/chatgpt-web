chat.yiq.pub {
 
    reverse_proxy /v1/* https://api.openai.com {
        header_up Host api.openai.com
        header_up Authorization "Bearer sk-your-token"
    }
 

    file_server / {
        root /var/wwwroot/chatgpt-web
        index chatgpt.html
    }
}
